# Example environment variables for production deployments
# Copy to `.env` and fill values before running `docker compose -f docker-compose.prod.yml up -d`

# Postgres
POSTGRES_USER=advisor
POSTGRES_PASSWORD=change_me
POSTGRES_DB=advisor_prod

# Backend / Flask
SECRET_KEY=replace_with_a_secure_value
JWT_SECRET_KEY=replace_with_a_secure_value_for_jwt
# Optionally override SQLAlchemy DB URL directly
# DATABASE_URL=postgresql://advisor:change_me@postgres:5432/advisor_prod

# Flask settings
FLASK_ENV=production

# Optional: Sentry or other production integrations
SENTRY_DSN=
# Backend Configuration
BACKEND_PORT=5000
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@db:5432/advisor_db

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000

# ML Model Configuration (Optional)
ML_MODEL_PATH=models/
USE_ML=false
